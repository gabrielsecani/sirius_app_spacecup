<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.sirius.spacecup.siriusapp.fragments.FragmentCadPreLancamento">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="45dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/prelancto_Grupos"
                android:saveEnabled="true"
                />
            <TextView android:labelFor="@+id/prelancto_dtLancamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="@string/data_de_lancamento" />


            <DatePicker
                android:id="@+id/prelancto_dtLancamento"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:calendarViewShown="false"
                android:datePickerMode="spinner" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="@string/distancia_ate_alvo" />

            <EditText
                android:id="@+id/prelancto_distanciaAlvo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/distancia_ate_alvo"
                android:inputType="number"
                android:maxLength="3" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="@string/angulo_lacamento" />

            <EditText
                android:id="@+id/prelancto_angulo_lancto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/angulo_lacamento"
                android:inputType="number"
                android:maxLength="3" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="@string/velocidade_vento" />


            <EditText
                android:id="@+id/prelancto_velocidade_vento"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/velocidade_vento"
                android:inputType="number"
                android:maxLength="3" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="@string/peso_foguete" />


            <EditText
                android:id="@+id/prelancto_peso_foguete"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/peso_foguete"
                android:inputType="number"
                android:maxLength="3" />
        </LinearLayout>
